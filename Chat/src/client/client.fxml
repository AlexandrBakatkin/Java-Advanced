<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<?scenebuilder-stylesheet /css/style.css?>
<?import java.net.URL?>

<?import javafx.scene.control.PasswordField?>
<VBox fx:controller="client.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <stylesheets><URL value="@/css/style.css"/></stylesheets>


    <HBox fx:id = "upperPanel" alignment="TOP_CENTER" visible="true" managed="true">
        <TextField fx:id="login" maxWidth="200" promptText="Логин"/>
        <PasswordField fx:id="password" maxWidth="200" promptText="Пароль" onAction="#auth"/>
        <Button fx:id="authButton" text="Enter" onAction="#auth"/>
    </HBox>

    <TextArea fx:id="textArea" editable="false" maxWidth="350" minHeight="300"/>

    <HBox fx:id = "bottomPanel" alignment="BOTTOM_CENTER" visible="false" managed="false">
        <TextField fx:id="textField"  minWidth="280" promptText="Введите сообщение.." onAction="#sendMsg"/>
        <Button fx:id = "btn1" text="OK" onAction="#sendMsg"/>
    </HBox>
</VBox>