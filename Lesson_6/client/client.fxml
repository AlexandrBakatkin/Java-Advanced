<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<?scenebuilder-stylesheet /css/style.css?>
<?import java.net.URL?>

<VBox fx:controller="client.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <stylesheets><URL value="@/css/style.css"/></stylesheets>
    <TextArea fx:id="textArea" editable="false" maxWidth="350" minHeight="300"/>
    <HBox alignment="BOTTOM_CENTER">
        <TextField fx:id="textField"  minWidth="280" promptText="Введите сообщение.." onAction="#enter"/>
        <Button fx:id = "btn1" text="OK" onAction="#sendMsg"/>
    </HBox>
</VBox>